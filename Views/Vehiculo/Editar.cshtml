@{
    ViewData["Title"] = "Editar Vehículo";
    var id = ViewBag.Id;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">Editar Vehículo</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form id="formEditarVehiculo">
                <input type="hidden" id="id" value="@id">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="placa">Placa</label>
                            <input type="text" class="form-control" id="placa" required>
                            <div class="invalid-feedback">La placa es requerida</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="tipoVehiculo">Tipo de Vehículo</label>
                            <select class="form-control" id="tipoVehiculo" required>
                                <option value="">Seleccione un tipo de vehículo</option>
                                <option value="0">Moto</option>
                                <option value="1">Auto</option>
                                <option value="2">Camioneta</option>
                                <option value="3">Camión</option>
                            </select>
                            <div class="invalid-feedback">El tipo de vehículo es requerido</div>
                        </div>
                    </div>
                    <div class="col-md-6" id="divUsuario">
                        <div class="form-group">
                            <label for="usuarioId">Usuario</label>
                            <select class="form-control" id="usuarioId" required>
                                <option value="">Seleccione un usuario</option>
                            </select>
                            <div class="invalid-feedback">El usuario es requerido</div>
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const vehiculoId = $('#id').val();
            // Detectamos el rol desde Razor e inyectamos el valor en JS
            const esCliente = '@User.IsInRole("Cliente")' === 'True';

            // Función centralizada para cargar datos del vehículo
            function cargarDatosVehiculo() {
                $.ajax({
                    url: '/api/Vehiculos/' + vehiculoId,
                    method: 'GET',
                    xhrFields: { withCredentials: true }
                })
                .done(function (vehiculo) {
                    $('#placa').val(vehiculo.placa);
                    $('#tipoVehiculo').val(vehiculo.tipoVehiculo);

                    if (esCliente) {
                        // Si es cliente, ocultamos el selector de usuario
                        $('#divUsuario').hide();
                        // Quitamos el atributo 'required' para que no falle la validación HTML
                        $('#usuarioId').removeAttr('required');

                        // Creamos un input oculto para guardar el ID del usuario dueño
                        if ($('#usuarioIdHidden').length === 0) {
                            $('<input>').attr({
                                type: 'hidden',
                                id: 'usuarioIdHidden',
                                value: vehiculo.usuarioId
                            }).appendTo('#formEditarVehiculo');
                        }
                    } else {
                        // Si es admin, seleccionamos el usuario en la lista
                        $('#usuarioId').val(vehiculo.usuarioId);
                    }
                })
                .fail(function () {
                    Swal.fire({
                    
                        title: 'Error',
                        text: 'No se pudo cargar la información del vehículo'
                    }).then(() => {
                        window.location.href = '/Vehiculo/Index';
                    });
                });
            }

            // Lógica de carga inicial condicional
            if (!esCliente) {
                // Si NO es cliente (es Admin/Trabajador), cargamos la lista de usuarios
                $.ajax({
                    url: '/api/Usuarios',
                    method: 'GET',
                    xhrFields: { withCredentials: true }
                })
                .done(function (data) {
                    const select = $('#usuarioId');
                    select.empty().append('<option value="">Seleccione un usuario</option>');
                    data.forEach(function (usuario) {
                        select.append('<option value="' + usuario.id + '">' + usuario.nombre + '</option>');
                    });
                    // Una vez cargados los usuarios, cargamos el vehículo
                    cargarDatosVehiculo();
                })
                .fail(function () {
                    Swal.fire('Error', 'No se pudo cargar la lista de usuarios', 'error');
                });
            } else {
                // Si ES cliente, saltamos la carga de usuarios y vamos directo al vehículo
                cargarDatosVehiculo();
            }

            // Manejo del envío del formulario
            $('#formEditarVehiculo').on('submit', function (e) {
                e.preventDefault();

                if (this.checkValidity() === false) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    return;
                }

                // Determinar qué ID de usuario enviar
                let usuarioIdFinal;
                if (esCliente) {
                    usuarioIdFinal = parseInt($('#usuarioIdHidden').val());
                } else {
                    usuarioIdFinal = parseInt($('#usuarioId').val());
                }

                const vehiculoData = {
                    id: parseInt(vehiculoId),
                    placa: $('#placa').val(),
                    tipoVehiculo: parseInt($('#tipoVehiculo').val()),
                    usuarioId: usuarioIdFinal
                };

                $.ajax({
                    url: '/api/Vehiculos/' + vehiculoId,
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(vehiculoData),
                    xhrFields: { withCredentials: true }
                })
                .done(function () {
                    Swal.fire({
                    
                        title: '¡Éxito!',
                        text: 'El vehículo ha sido actualizado correctamente',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        window.location.href = '/Vehiculo/Index';
                    });
                })
                .fail(function (xhr) {
                    let errorMessage = 'Ocurrió un error al actualizar el vehículo';
                    if (xhr.responseJSON && xhr.responseJSON.mensaje) {
                        errorMessage = xhr.responseJSON.mensaje;
                    }
                    Swal.fire({
                        
                        title: 'Error',
                        text: errorMessage
                    });
                });
            });
        });
    </script>
}