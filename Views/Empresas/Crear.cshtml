@using Parqueadero.Models
@model Empresa
@{
    ViewData["Title"] = "Crear Empresa";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="h2 text-dark">
            <i class="fas fa-plus-circle text-success me-2"></i> Registrar Nueva **Empresa**
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </div>

    <div class="card shadow-sm mb-4 border-success">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Datos de la Entidad Comercial</h5>
        </div>
        <div class="card-body">
            <form id="crearEmpresaForm">
                
                <p class="text-muted small mb-4">
                    <i class="fas fa-info-circle me-1"></i> Todos los campos marcados con * son obligatorios.
                </p>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre de la empresa" required />
                            <label asp-for="Nombre">Nombre (*)</label>
                            <span asp-validation-for="Nombre" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Nit" class="form-control" placeholder="NIT o Identificación Tributaria" required />
                            <label asp-for="Nit">NIT (*)</label>
                            <span asp-validation-for="Nit" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Telefono" class="form-control" placeholder="Número de contacto" required />
                            <label asp-for="Telefono">Teléfono (*)</label>
                            <span asp-validation-for="Telefono" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Correo" type="email" class="form-control" placeholder="Correo electrónico de contacto" required />
                            <label asp-for="Correo">Correo Electrónico (*)</label>
                            <span asp-validation-for="Correo" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm">
                        <i class="fas fa-save me-2"></i> Guardar Empresa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> 

    <script>
        $(document).ready(function () {
            // Asegúrate de que el validador de jQuery esté cargado y configurado
            // para que la validación client-side funcione antes de enviar el AJAX.
            
            $('#crearEmpresaForm').on('submit', function (e) {
                // Previene el envío normal del formulario
                e.preventDefault(); 

                // Verifica si el formulario es válido usando el validador de jQuery
                if (!$(this).valid()) {
                    // Si no es válido, detiene la ejecución.
                    return; 
                }

                // Recopilación de datos del formulario
                const empresa = {
                    nombre: $('#Nombre').val(),
                    nit: $('#Nit').val(),
                    telefono: $('#Telefono').val(),
                    correo: $('#Correo').val()
                };

                // Llamada AJAX para crear
                $.ajax({
                    url: '/api/Empresas',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(empresa),
                    
                    success: function (response) {
                        Swal.fire({
                            title: '¡Éxito!',
                            text: 'Empresa creada correctamente.',
                            
                        }).then(() => {
                            window.location.href = '/Empresas/Index';
                        });
                    },
                    
                    error: function (xhr) {
                        // Mejor manejo de errores: muestra el mensaje específico del servidor
                        const errorMessage = xhr.responseJSON?.mensaje || 'Error al crear la empresa. Verifique los datos.';
                        Swal.fire({
                            title: 'Error de Creación',
                            text: errorMessage,
                            icon: 'error'
                        });
                    }
                });
            });
        });
    </script>
}