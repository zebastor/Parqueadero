@using Parqueadero.Models
@model Empresa
@{
    ViewData["Title"] = "Editar Empresa";

    // ðŸ’¡ SOLUCIÃ“N: Usar el Operador Null-Conditional (?) para proteger el acceso al Nombre
    var nombreEmpresa = Model?.Nombre ?? "Empresa Desconocida";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="h2 text-dark">
            <i class="fas fa-edit text-primary me-2"></i> Editar Empresa
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
    
    <div class="card shadow-sm mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Actualizar InformaciÃ³n de la Empresa</h5>
        </div>
        
        <div class="card-body">
            <form id="editarEmpresaForm">
                
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Nombre">Nombre</label>
                            <input asp-for="Nombre" class="form-control" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Nit">NIT</label>
                            <input asp-for="Nit" class="form-control" required />
                            <span asp-validation-for="Nit" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Telefono">TelÃ©fono</label>
                            <input asp-for="Telefono" class="form-control" required />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Correo">Correo</label>
                            <input asp-for="Correo" type="email" class="form-control" required />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fas fa-save me-2"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> 

    <script>
        $(document).ready(function () {
            // Aseguramos que el ID se lea, ya sea del Model o ViewBag, sin modificar la estructura URL
            const id = $('#Id').val() || @(ViewBag.Id ?? "0"); // Usamos el ID del campo oculto o ViewBag
            
            // Cargar datos de la empresa (mantengo la lÃ³gica original)
            $.get(`/api/Empresas/${id}`, function (empresa) {
                $('#Id').val(empresa.id);
                $('#Nombre').val(empresa.nombre);
                $('#Nit').val(empresa.nit);
                $('#Telefono').val(empresa.telefono);
                $('#Correo').val(empresa.correo);
            });

            $('#editarEmpresaForm').on('submit', function (e) {
                e.preventDefault();
                
                if (!$(this).valid()) {
                    return; 
                }

                const empresa = {
                    id: $('#Id').val(),
                    nombre: $('#Nombre').val(),
                    nit: $('#Nit').val(),
                    telefono: $('#Telefono').val(),
                    correo: $('#Correo').val()
                };

                $.ajax({
                    url: `/api/Empresas/${id}`, // La URL se mantiene igual
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(empresa),
                    
                    success: function () {
                        Swal.fire({
                            title: 'Â¡Ã‰xito!',
                            text: 'Empresa actualizada correctamente',
                           
                        }).then(() => {
                            window.location.href = '/Empresas/Index';
                        });
                    },
                    
                    error: function (xhr) {
                        const errorMessage = xhr.responseJSON?.mensaje || 'Error al actualizar la empresa';
                        Swal.fire({
                            title: 'Error',
                            text: errorMessage,
                            icon: 'error'
                        });
                    }
                });
            });
        });
    </script>
}