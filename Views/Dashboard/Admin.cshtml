                </div>
                <div class="card-footer bg-white border-0 py-3 text-right">
                    <a asp-controller="Parqueaderos" asp-action="Index" class="btn btn-primary btn-icon-split shadow-sm">
                        <span class="icon text-white-50"><i class="fas fa-arrow-right"></i></span>
                        <span class="text">Gestionar Parqueaderos</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-12 mb-4">
            <div class="card bg-info text-white shadow-lg h-100 border-0">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white text-uppercase mb-1 opacity-75">
                                Total de Usuarios
                            </div>
                            <div class="h3 mb-0 font-weight-bold">@ViewBag.TrabajadoresCount</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 py-3 text-right">
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-info btn-icon-split shadow-sm">
                        <span class="icon text-white-50"><i class="fas fa-arrow-right"></i></span>
                        <span class="text">Gestionar Trabajadores y Clientes</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
