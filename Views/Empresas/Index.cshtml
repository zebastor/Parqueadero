@{
    ViewData["Title"] = "Empresas";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        
        <h1 class="h2 text-dark">
            <i class="fas fa-building text-primary me-2"></i> Gestión de Empresas
        </h1>
        
        <div class="d-flex gap-2">
            
            <a asp-action="Crear" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-plus me-1"></i> Nueva Empresa
            </a>
            
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Volver al Dashboard
            </a>
            
        </div>
    </div>
    
    <div class="bg-white p-4 shadow-sm rounded">
        <div class="table-responsive">
            <table class="table table-hover w-100" id="empresasTable" cellspacing="0">
                <thead class="bg-light">
                    <tr>
                        <th>Nombre</th>
                        <th>NIT</th>
                        <th>Teléfono</th>
                        <th>Correo Electrónico</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#empresasTable').DataTable({
                // Configuración de Ajax y Columnas
                ajax: {
                    url: '/api/Empresas',
                    dataSrc: ''
                },
                columns: [
                    { data: 'nombre' },
                    { data: 'nit' },
                    { data: 'telefono' },
                    { 
                        data: 'correo',
                        // Formato de correo como enlace
                        render: function (data) {
                            return `<a href="mailto:${data}">${data}</a>`;
                        }
                    },
                    {
                        data: 'id',
                        className: 'text-center', // Centrar los botones
                        orderable: false, // Deshabilitar ordenamiento en la columna de acciones
                        render: function (data) {
                            return `
                                <div class="btn-group" role="group">
                                    <a href="/Empresas/Editar/${data}" class="btn btn-outline-info btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <button class="btn btn-outline-danger btn-sm" onclick="confirmarEliminar('${data}')" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </button>
                                </div>
                            `;
                        }
                    }
                ],
                // Estilo y lenguaje
                pagingType: 'full_numbers', // Paginación más completa
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                }
            });
        });

        // Función para manejar la eliminación con SweetAlert2 para un toque moderno
        function confirmarEliminar(id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "¡No podrás revertir esto!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Lógica de eliminación, puedes redirigir o usar AJAX DELETE
                    window.location.href = `/Empresas/Eliminar/${id}`; 
                }
            })
        }
    </script>
}